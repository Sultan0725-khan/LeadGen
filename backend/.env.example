# Database
DATABASE_URL=sqlite:///./leadgen.db

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Google Places API
GOOGLE_PLACES_API_KEY=your-google-places-api-key-here

# Yelp Fusion API (optional)
YELP_API_KEY=your-yelp-api-key-here

# Email Sending (choose one)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# OR use SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Application Settings
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Your Company Name
MAX_EMAILS_PER_MINUTE=10
DEFAULT_LANGUAGE=DE

# Salesforce Configuration
SFDC_CLIENT_ID=your-client-id
SFDC_CLIENT_SECRET=your-client-secret
SFDC_USERNAME=your-username
SFDC_PASSWORD=your-password
SFDC_SECURITY_TOKEN=your-security-token
SFDC_INSTANCE_URL=https://your-instance.my.salesforce.com
SFDC_IS_SANDBOX=true
